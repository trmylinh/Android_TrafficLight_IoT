<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mode_selection.ModeSelectionActivity">

    <LinearLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/rounded_disable_background"
        android:backgroundTint="#D9D9D9"
        android:paddingHorizontal="@dimen/_50sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Lights Number"
            android:textAlignment="center"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/instrument_sans_bold" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:backgroundTint="#7B9AB7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/instrument_sans_bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_marginStart="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:backgroundTint="#7B9AB7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/instrument_sans_bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_marginStart="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:backgroundTint="#7B9AB7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/instrument_sans_bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:elevation="0dp"
                android:layout_marginStart="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_4sdp"
                android:backgroundTint="#7B9AB7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:layout_marginVertical="@dimen/_10sdp"
                    android:textSize="@dimen/_16sdp"
                    android:text="4"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/instrument_sans_bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>